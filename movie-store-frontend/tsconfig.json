{
  "compilerOptions": {
    "jsx": "react-jsx",

    /* Language and Environment */
    "target": "es2016",
    "lib": ["dom", "webworker", "es2020"],
    "module": "commonjs",
    "types": ["jest"],
    "outDir": "build",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
